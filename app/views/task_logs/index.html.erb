<div class="main-container">
  <div class="flex items-center justify-between mb-10">
    <h1 class="text-xl font-bold">Task Logs ⏱️</h1>
  </div>
  <% if @active_task.present? %>
    <%= render partial: 'active_task', locals: {task: @active_task.task }%>
  <% else %>
    <%= render partial: 'form' %>
  <% end %>
  <div class="divider my-10">Recent Task Logs</div>
  <%= turbo_frame_tag "tasks_logs" do %>
    <%= render partial: "task_list", locals: { task_logs: @task_logs } %>
  <% end %>
  <div id="load_more_button" class="w-full flex justify-center">
    <%= button_to "Load More", pagy_url_for(@pagy, @pagy.next), data: { turbo_method: :post }, class: "btn btn-primary"%>
  </div>
</div>