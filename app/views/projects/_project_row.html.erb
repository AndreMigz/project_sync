<!-- row 1 -->
<tr>
  <th>
    <label>
      <input type="checkbox" class="checkbox" />
    </label>
  </th>
  <td>
    <div class="flex items-center gap-3">
      <div class="avatar">
        <div class="mask mask-squircle h-12 w-12">
          <% if project.logo.attached? %>
            <%= image_tag project.logo, alt: "Project Logo" %>
          <% else %>
            <img src="https://placehold.jp/80x80.png" alt="Project Placeholder" />
          <% end %>
        </div>
      </div>
      <div>
        <div class="font-bold"><%= project.name %></div>
      </div>
    </div>
  </td>
  <td><%= project.client %></td>
  <td><%= project.description %></td>
  <td>
    <div class="flex gap-x-2">
      <button class="btn btn-ghost btn-xs" onclick="formModal<%= project.id %>.showModal()">update</button>
      <%= render partial: "form_modal", locals: { project: project } %>
      <%= button_to "delete", project, method: :delete, class: "btn btn-ghost btn-xs" %>
    </div>
  </td>
</tr>