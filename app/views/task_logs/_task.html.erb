<div id="<%= dom_id(time_log) %>" class="container bg-base-300 px-5 py-4 my-5 rounded-md" >
  <div class="w-full flex items-center justify-between">
    <div class="flex items-center max-w-max">
      <p class="text-md truncate"><%= time_log.task.name %></p>
      <p class="text-sm ms-5 text-primary truncate">ðŸ“‚ <%= time_log.task.project.name %></p>
    </div>
