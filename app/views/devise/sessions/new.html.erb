<div class="max-lg:container lg:w-[30%] min-w-max mx-auto p-5 flex flex-col justify-center items-center">
  <%= image_tag "logo-light.png", class: "size-28 mb-5", alt: "project sync logo" %>
  <h2 class="text-3xl font-bold">Welcome Back</h2>
  <p class="w-8/12 text-wrap text-center text-sm my-3">Sign in to access your dashboard, time tracker and invoice.</p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"font-bold text-sm mb-1" %><br/>
      <div class="input input-bordered flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
            <path
              d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
          </svg>
        <%= f.email_field :email, class: "grow border-0", autofocus: true, autocomplete: "email", placeholder: "example@email.com" %>
      </div>
    </div>
    <div class="field mt-5">
      <div class="w-full flex justify-between items-center">
        <%= f.label :password, class:"font-bold text-sm mb-1" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-primary text-sm" %>
      </div>
      <div class="input input-bordered flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4 opacity-70">
          <path
            fill-rule="evenodd"
            d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
            clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password, class:"grow border-0", autocomplete: "current-password", placeholder: "Enter password" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field mt-3 cursor-pointer">
        <%= f.check_box :remember_me, class:"checkbox checkbox-primary" %>
        <%= f.label :remember_me, class: "label-text" %>
      </div>
    <% end %>
    <div class="actions mt-7">
      <%= f.submit "Sign in ->", class: "btn btn-primary w-full" %>
    </div>
    <div class="mt-7 text-sm flex justify-center items-center">
      No account?
      <%= link_to "Create an account", new_registration_path(resource_name), class: "ml-2 text-primary" %><br />
    </div>
  <% end %>
  <%# render "devise/shared/links" %>
</div>
