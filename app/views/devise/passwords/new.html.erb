<div class="max-lg:container lg:w-[30%] min-w-max mx-auto p-5 flex flex-col justify-center items-center">
  <h2 class="text-2xl font-bold my-4">Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, class:"font-bold text-sm mb-1" %><br/>
      <div class="input input-bordered flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
            <path
              d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
          </svg>
        <%= f.email_field :email, class: "grow border-0 outline-0", autofocus: true, autocomplete: "email", placeholder: "example@email.com" %>
      </div>
    </div>
    <div class="actions mt-6">
      <%= f.submit "Send me reset password instructions", class: "w-full btn btn-primary" %>
    </div>
    <div class="flex items-center justify-center mt-3 gap-2">
      <%= link_to "Log in", new_session_path(resource_name), class: "w-1/2 btn text-center" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "w-1/2 btn text-center" %>
    </div>
  <% end %>
  <%# render "devise/shared/links" %>
</div>
